<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Betting History</h1>
    <%= link_to "Place New Bet", root_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Total Wagered</h3>
      <p class="text-2xl font-bold text-gray-900"><%= format_currency(@total_wagered) %></p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Profit/Loss</h3>
      <p class="text-2xl font-bold <%= profit_loss_class(@total_profit_loss) %>">
        <%= format_currency(@total_profit_loss) %>
      </p>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-700 mb-2">Win Rate</h3>
      <p class="text-2xl font-bold text-gray-900"><%= @win_percentage %>%</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <%= form_with url: betting_histories_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div>
        <%= form.label :week, "NFL Week", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :week, options_for_select((1..18).map { |w| ["Week #{w}", w] }, params[:week]), 
                       { include_blank: "All Weeks" }, 
                       { class: "border border-gray-300 rounded px-3 py-2" } %>
      </div>
      
      <div>
        <%= form.label :result, "Result", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :result, options_for_select([
                         ["All Results", ""],
                         ["Pending", "pending"],
                         ["Won", "win"],
                         ["Lost", "loss"],
                         ["Push", "push"]
                       ], params[:result]), 
                       {}, 
                       { class: "border border-gray-300 rounded px-3 py-2" } %>
      </div>
      
      <%= form.submit "Filter", class: "bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      
      <% if params[:week].present? || params[:result].present? %>
        <%= link_to "Clear Filters", betting_histories_path, class: "text-blue-600 hover:text-blue-800 underline py-2" %>
      <% end %>
    <% end %>
  </div>

  <!-- Betting History Table -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <% if @betting_histories.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Week</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Bet</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Line</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stake</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Result</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">P&L</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ROI</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @betting_histories.each do |bet| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= bet.created_at.strftime('%m/%d/%Y %I:%M%p') %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= bet.nfl_week %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= bet.formatted_description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= bet.formatted_line %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= format_currency(bet.total_stake) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= result_badge_class(bet.result) %>">
                    <%= bet.result.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium <%= profit_loss_class(bet.profit_loss) %>">
                  <%= format_currency(bet.profit_loss) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm <%= profit_loss_class(bet.profit_loss) %>">
                  <%= bet.roi_percentage %>%
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No bets found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by placing your first bet!</p>
        <div class="mt-6">
          <%= link_to "Place a bet", root_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
