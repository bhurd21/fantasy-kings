<div class="header">
  <h1>Hi, <%= current_user.name %>!</h1>
  <%= link_to "Logout", logout_path, class: "logout-btn" %>
</div>

<%= form_with url: bets_path, method: :post, local: true, class: "betting-form" do |form| %>
  <% if flash[:notice] %>
    <div class="flash-notice"><%= flash[:notice] %></div>
  <% end %>
  
  <% if flash[:alert] %>
    <div class="flash-alert"><%= flash[:alert] %></div>
  <% end %>

  <div class="betting-container">

    <div class="bet-cards">
      <% @bets.each do |bet| %>
        <div class="bet-card">

          <div class="betting-grid">
            <!-- Labels Column -->
            <div class="bet-commence-time"><%= bet[:date] %></div>
            <div class="bet-label">spread</div>
            <div class="bet-label">totals</div>
            <div class="bet-label">winner</div>
            
            <!-- Away Options Row -->
            <div class="team-label"><%= bet[:away_team] %></div>
            <% if bet[:away_spread].present? %>
              <%= form.radio_button :selected_bet, "#{bet[:id]}_away_spread", id: "bet_#{bet[:id]}_away_spread", class: "bet-radio" %>
              <%= form.label "bet_#{bet[:id]}_away_spread", class: "bet-button" do %>
                <div class="bet-value"><%= bet[:away_spread] %></div>
                <div class="bet-odds"><%= bet[:away_spread_odds] %></div>
              <% end %>
            <% else %>
              <div class="bet-button disabled">
                <div class="bet-value">-</div>
              </div>
            <% end %>
            
            <% if bet[:total].present? %>
              <%= form.radio_button :selected_bet, "#{bet[:id]}_total_over", id: "bet_#{bet[:id]}_total_over", class: "bet-radio" %>
              <%= form.label "bet_#{bet[:id]}_total_over", class: "bet-button" do %>
                <div class="bet-value">O <%= bet[:total] %></div>
                <div class="bet-odds"><%= bet[:total_odds] %></div>
              <% end %>
            <% else %>
              <div class="bet-button disabled">
                <div class="bet-value">-</div>
              </div>
            <% end %>
            
            <% if bet[:away_moneyline].present? %>
              <%= form.radio_button :selected_bet, "#{bet[:id]}_away_winner", id: "bet_#{bet[:id]}_away_winner", class: "bet-radio" %>
              <%= form.label "bet_#{bet[:id]}_away_winner", class: "bet-button" do %>
                <div class="bet-odds"><%= bet[:away_moneyline] %></div>
              <% end %>
            <% else %>
              <div class="bet-button disabled">
                <div class="bet-value">-</div>
              </div>
            <% end %>
            
            <!-- Home Options Row -->
            <div class="team-label"><%= bet[:home_team] %></div>
            <% if bet[:home_spread].present? %>
              <%= form.radio_button :selected_bet, "#{bet[:id]}_home_spread", id: "bet_#{bet[:id]}_home_spread", class: "bet-radio" %>
              <%= form.label "bet_#{bet[:id]}_home_spread", class: "bet-button" do %>
                <div class="bet-value"><%= bet[:home_spread] %></div>
                <div class="bet-odds"><%= bet[:home_spread_odds] %></div>
              <% end %>
            <% else %>
              <div class="bet-button disabled">
                <div class="bet-value">-</div>
              </div>
            <% end %>
            
            <% if bet[:total].present? %>
              <%= form.radio_button :selected_bet, "#{bet[:id]}_total_under", id: "bet_#{bet[:id]}_total_under", class: "bet-radio" %>
              <%= form.label "bet_#{bet[:id]}_total_under", class: "bet-button" do %>
                <div class="bet-value">U <%= bet[:total] %></div>
                <div class="bet-odds"><%= bet[:under_odds] %></div>
              <% end %>
            <% else %>
              <div class="bet-button disabled">
                <div class="bet-value">-</div>
              </div>
            <% end %>
            
            <% if bet[:home_moneyline].present? %>
              <%= form.radio_button :selected_bet, "#{bet[:id]}_home_winner", id: "bet_#{bet[:id]}_home_winner", class: "bet-radio" %>
              <%= form.label "bet_#{bet[:id]}_home_winner", class: "bet-button" do %>
                <div class="bet-odds"><%= bet[:home_moneyline] %></div>
              <% end %>
            <% else %>
              <div class="bet-button disabled">
                <div class="bet-value">-</div>
              </div>
            <% end %>
          </div>
          
          <% if bet[:update_time] %>
            <div class="bet-update-time"><%= bet[:update_time] %></div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="confirm-section hidden" id="confirm-section">
      <%= form.submit "Confirm â†’", class: "confirm-button", id: "confirm-bet-button", disabled: true %>
    </div>
  </div>
<% end %>

<div class="navigation-links">
  <%= link_to "View Betting History", betting_histories_path, class: "history-link" %>
</div>

