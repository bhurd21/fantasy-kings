<script>
  document.addEventListener('DOMContentLoaded', function() {
    const radios = document.querySelectorAll('.bet-radio');
    const confirmButton = document.getElementById('confirm-bet-button');
    const confirmSection = document.getElementById('confirm-section');

    function updateConfirm() {
      const hasChecked = Array.from(radios).some(r => r.checked);
      if (hasChecked) {
        confirmSection.classList.remove('hidden');
        confirmButton.classList.add('active');
        confirmButton.disabled = false;
      } else {
        confirmSection.classList.add('hidden');
        confirmButton.classList.remove('active');
        confirmButton.disabled = true;
      }
    }

    radios.forEach(radio => {
      radio.addEventListener('change', updateConfirm);
    });

    // Unselect when clicking anywhere that isn't a bet button/radio or the confirm section
    document.addEventListener('click', function(e) {
      const clickedBet = e.target.closest('.bet-button') || e.target.closest('.bet-radio');
      const clickedConfirm = e.target.closest('#confirm-section');
      if (!clickedBet && !clickedConfirm) {
        radios.forEach(r => r.checked = false);
        updateConfirm();
      }
    });

    // initialize state on load
    updateConfirm();
  });
</script>