    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .total-stats {
    padding-bottom: 8px;
    border-bottom: 1px solid #333;
  }

  .total-winnings {
    font-weight: bold;
    font-size: 24px;
    color: white;
  }

  .total-winnings.positive {
    color: #4d9640;
  }

  .total-winnings.negative {
    color: #d32f2f;
  }

  .sport-splits {
    display: flex;
    gap: 12px;
  }

  .split-item {
    display: flex;
    align-items: center;
    gap: 6px;
    flex: 1;
  }

  .sport-split-icon {
    font-size: 16px;
    color: #888;
    flex-shrink: 0;
  }

  .split-stats {
    display: flex;
    flex-direction: column;
    gap: 2px;
    font-size: 12px;
  }

  .split-won {
    font-weight: bold;
  }

  .split-won.positive {
    color: #4d9640;
  }

  .split-won.negative {
    color: #d32f2f;
  }

  .split-bet {
    color: #666;
    font-size: 11px;
  }

  .empty-state {
    text-align: center;
    color: #888;
    padding: 40px 20px;
  }
</style>
