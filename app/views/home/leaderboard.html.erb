<div class="header">
  <h1>Season Leaderboard</h1>
</div>

<div class="leaderboard-container">
  <% if @leaderboard.any? %>
    <div class="leaderboard-list">
      <% @leaderboard.each_with_index do |entry, index| %>
        <%= link_to user_profile_path(entry[:user]), class: "leaderboard-item-link" do %>
          <div class="leaderboard-item">
            <div class="rank-section">
              <span class="rank-badge rank-<%= index + 1 %>">#<%= index + 1 %></span>
            </div>
            <div class="user-section">
              <div class="user-name"><%= entry[:user].display_name %></div>

              <div class="stats-section">
                <div class="total-stats">
                  <div class="total-winnings <%= entry[:winnings] > 0 ? 'positive' : entry[:winnings] < 0 ? 'negative' : '' %>">
                    <%= format_currency(entry[:winnings]) %>
                  </div>
                </div>

                <% if entry[:nfl_stake] > 0 || entry[:nfl_winnings] != 0 || entry[:ncaaf_stake] > 0 || entry[:ncaaf_winnings] != 0 %>
                  <div class="sport-splits">
                    <% if entry[:nfl_stake] > 0 || entry[:nfl_winnings] != 0 %>
                      <div class="split-item">
                        <i class="fa-solid fa-shield sport-split-icon"></i>
                        <div class="split-stats">
                          <span class="split-won <%= entry[:nfl_winnings] > 0 ? 'positive' : entry[:nfl_winnings] < 0 ? 'negative' : '' %>">
                            <%= format_currency(entry[:nfl_winnings]) %>
                          </span>
                          <span class="split-bet"><%= format_currency(entry[:nfl_stake]) %></span>
                        </div>
                      </div>
                    <% end %>
                    <% if entry[:ncaaf_stake] > 0 || entry[:ncaaf_winnings] != 0 %>
                      <div class="split-item">
                        <i class="fa-solid fa-football sport-split-icon"></i>
                        <div class="split-stats">
                          <span class="split-won <%= entry[:ncaaf_winnings] > 0 ? 'positive' : entry[:ncaaf_winnings] < 0 ? 'negative' : '' %>">
                            <%= format_currency(entry[:ncaaf_winnings]) %>
                          </span>
                          <span class="split-bet"><%= format_currency(entry[:ncaaf_stake]) %></span>
                        </div>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">No betting data available yet.</div>
  <% end %>
</div>

<style>
