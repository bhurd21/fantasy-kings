<div class="header">
  <h1>Season Leaderboard</h1>
</div>

<div class="leaderboard-container">
  <% if @leaderboard.any? %>
    <div class="leaderboard-list">
      <% @leaderboard.each_with_index do |entry, index| %>
        <%= link_to user_profile_path(entry[:user]), class: "leaderboard-item-link" do %>
          <div class="leaderboard-item">
            <div class="rank-section">
              <span class="rank-badge rank-<%= index + 1 %>">#<%= index + 1 %></span>
            </div>
            <div class="user-section">
              <div class="user-name"><%= entry[:user].name %></div>
              <div class="user-stats">
                <span class="winnings <%= entry[:winnings] > 0 ? 'positive' : entry[:winnings] < 0 ? 'negative' : '' %>">
                  <%= format_currency(entry[:winnings]) %> won
                </span>
                <span class="stake">
                  <%= format_currency(entry[:stake]) %> bet
                </span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">No betting data available yet.</div>
  <% end %>
</div>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    margin: 0;
    padding: 0;
    background: #111;
    color: white;
  }

  .header {
    padding: 20px;
    background: #1a1a1a;
    border-bottom: 1px solid #333;
  }

  .header h1 {
    margin: 0;
    color: white;
  }

  .leaderboard-container {
    padding: 16px;
  }

  .leaderboard-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .leaderboard-item-link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.2s;
  }

  .leaderboard-item-link:active {
    transform: scale(0.98);
  }

  .leaderboard-item {
    background: #1a1a1a;
    border-radius: 12px;
    padding: 16px;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .rank-section {
    flex-shrink: 0;
    width: 50px;
    text-align: center;
  }

  .user-section {
    flex-grow: 1;
  }

  .rank-badge {
    font-size: 20px;
    font-weight: bold;
    color: #4d9640;
  }

  .rank-badge.rank-1 {
    color: #FFD700;
    font-size: 24px;
  }

  .rank-badge.rank-2 {
    color: #C0C0C0;
    font-size: 22px;
  }

  .rank-badge.rank-3 {
    color: #CD7F32;
    font-size: 22px;
  }

  .user-name {
    font-size: 18px;
    font-weight: bold;
    color: white;
    margin-bottom: 4px;
  }

  .user-stats {
    display: flex;
    gap: 16px;
    font-size: 14px;
  }

  .winnings {
    font-weight: bold;
  }

  .winnings.positive {
    color: #4d9640;
  }

  .winnings.negative {
    color: #d32f2f;
  }

  .stake {
    color: #888;
  }

  .empty-state {
    text-align: center;
    color: #888;
    padding: 40px 20px;
  }
</style>
