    border-radius: 12px;
    padding: 16px;
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .rank-section {
    flex-shrink: 0;
    width: 50px;
    text-align: center;
  }

  .user-section {
    flex-grow: 1;
  }

  .rank-badge {
    font-size: 20px;
    font-weight: bold;
    color: #4d9640;
  }

  .rank-badge.rank-1 {
    color: #FFD700;
    font-size: 24px;
  }

  .rank-badge.rank-2 {
    color: #C0C0C0;
    font-size: 22px;
  }

  .rank-badge.rank-3 {
    color: #CD7F32;
