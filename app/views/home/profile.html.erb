<div class="header">
  <h1><%= current_user.name %></h1>
  <%= link_to "Logout", logout_path, class: "logout-btn" %>
</div>

<div class="stats">
  <div class="stat-card">
    <div class="stat-label">Total Wagered</div>
    <div class="stat-value"><%= format_currency(@total_wagered) %></div>
  </div>
  
  <div class="stat-card">
    <div class="stat-label">Profit/Loss</div>
    <div class="stat-value <%= @total_profit_loss >= 0 ? 'positive' : 'negative' %>">
      <%= format_currency(@total_profit_loss) %>
    </div>
  </div>
  
  <div class="stat-card">
    <div class="stat-label">Win Rate</div>
    <div class="stat-value"><%= @win_percentage %>%</div>
  </div>
</div>

<div class="history-section">
  <h2>Betting History</h2>
  <% if @betting_histories.any? %>
    <% @betting_histories.each do |bet| %>
      <div class="history-item">
        <div class="history-header">
          <span class="history-date"><%= bet.created_at.strftime('%m/%d') %></span>
          <span class="history-week">Week <%= bet.nfl_week %></span>
          <span class="bet-result <%= bet.result %>"><%= bet.result.humanize %></span>
        </div>
        <div class="history-bet"><%= bet.formatted_description %></div>
        <div class="history-footer">
          <span class="history-line"><%= bet.formatted_line %></span>
          <span class="history-stake"><%= format_currency(bet.total_stake) %></span>
          <span class="history-pl <%= bet.profit_loss >= 0 ? 'positive' : 'negative' %>">
            <%= format_currency(bet.profit_loss) %>
          </span>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="empty-state">No betting history yet.</div>
  <% end %>
</div>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    margin: 0;
    padding: 0;
    background: #111;
    color: white;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background: #1a1a1a;
    border-bottom: 1px solid #333;
  }

  .header h1 {
    margin: 0;
    color: white;
  }

  .logout-btn {
    background: #d32f2f;
    color: white;
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 14px;
  }

  .stats {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
    padding: 16px;
  }

  .stat-card {
    background: #1a1a1a;
    border-radius: 8px;
    padding: 16px;
  }

  .stat-label {
    font-size: 14px;
    color: #888;
    margin-bottom: 8px;
  }

  .stat-value {
    font-size: 24px;
    font-weight: bold;
  }

  .stat-value.positive {
    color: #4d9640;
  }

  .stat-value.negative {
    color: #d32f2f;
  }

  .history-section {
    padding: 16px;
  }

  .history-section h2 {
    margin: 0 0 16px 0;
    font-size: 18px;
  }

  .history-item {
    background: #1a1a1a;
    border-radius: 8px;
    padding: 12px;
    margin-bottom: 12px;
  }

  .history-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
    font-size: 12px;
  }

  .history-date, .history-week {
    color: #888;
  }

  .bet-result {
    padding: 2px 8px;
    border-radius: 8px;
    font-size: 11px;
    text-transform: uppercase;
  }

  .bet-result.pending {
    background: #333;
    color: #888;
  }

  .bet-result.win {
    background: #4d9640;
    color: white;
  }

  .bet-result.loss {
    background: #d32f2f;
    color: white;
  }

  .bet-result.push {
    background: #ff9800;
    color: white;
  }

  .history-bet {
    font-size: 15px;
    margin-bottom: 8px;
  }

  .history-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  .history-line {
    color: #888;
  }

  .history-stake {
    color: #888;
  }

  .history-pl.positive {
    color: #4d9640;
  }

  .history-pl.negative {
    color: #d32f2f;
  }

  .empty-state {
    text-align: center;
    color: #888;
    padding: 40px 20px;
  }
</style>
