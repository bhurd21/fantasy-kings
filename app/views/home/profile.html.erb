<div class="header">
  <h1><%= @user.name %></h1>
</div>

<div class="stats">
  <!-- Week Card -->
  <div class="stat-card-large">
    <div class="card-header">
      <h2>Week <%= @selected_week %></h2>
      <select id="weekSelector" class="week-selector-small">
        <% (1..18).each do |week_num| %>
          <option value="<%= week_num %>" <%= 'selected' if week_num == @selected_week %>>Week <%= week_num %></option>
        <% end %>
      </select>
    </div>
    <div class="stat-row">
      <div class="stat-item">
        <div class="stat-label">Record</div>
        <div class="stat-value"><%= @week_record %></div>
      </div>
      <div class="stat-item">
        <div class="stat-label">Winnings</div>
        <div class="stat-value <%= @week_winnings >= 0 ? 'positive' : 'negative' %>">
          <%= format_currency(@week_winnings) %>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-label">Spent</div>
        <div class="stat-value"><%= format_currency(@week_spent) %></div>
      </div>
    </div>
  </div>
  
  <!-- Season Card -->
  <div class="stat-card-large">
    <div class="card-header">
      <h2>Season</h2>
    </div>
    <div class="stat-row">
      <div class="stat-item">
        <div class="stat-label">Record</div>
        <div class="stat-value"><%= @season_record %></div>
      </div>
      <div class="stat-item">
        <div class="stat-label">Winnings</div>
        <div class="stat-value <%= @season_winnings >= 0 ? 'positive' : 'negative' %>">
          <%= format_currency(@season_winnings) %>
        </div>
      </div>
      <div class="stat-item">
        <div class="stat-label">Spent</div>
        <div class="stat-value"><%= format_currency(@season_spent) %></div>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('weekSelector')?.addEventListener('change', function() {
    const url = new URL(window.location.href);
    url.searchParams.set('week', this.value);
    window.location.href = url.toString();
  });
</script>

<div class="history-section">
  <h2>Betting History</h2>
  <% if @betting_histories.any? %>
    <% @betting_histories.group_by { |bet| bet.created_at.to_date }.each do |date, bets| %>
      <div class="date-group">
        <div class="date-separator">
          <span class="date-text"><%= date.strftime("%m/%d/%y") %></span>
        </div>
        <% bets.each do |bet| %>
          <div class="bet-item">
            <div class="bet-grid">
              <div class="bet-description"><%= bet.formatted_description %></div>
              <div class="bet-line"><%= bet.formatted_line %></div>
              <div class="bet-stake"><%= format_currency(bet.total_stake) %></div>
              <div class="bet-outcome <%= bet.result %>">
                <% if bet.result == 'pending' %>
                  <%= bet.result.humanize %>
                <% elsif bet.winnings > 0 %>
                  +<%= format_currency(bet.winnings) %>
                <% else %>
                  <%= format_currency(0) %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="empty-state">No betting history yet.</div>
  <% end %>
</div>

