<div class="header">
  <h1>Week <%= @week %></h1>
  <select id="weekSelector" class="week-selector">
    <% (1..18).each do |week_num| %>
      <option value="<%= week_num %>" <%= 'selected' if week_num == @week %>>Week <%= week_num %></option>
    <% end %>
  </select>
</div>

<div class="bets-list">
  <% if @user_bets.any? %>
    <% @user_bets.each_with_index do |(user, bets), index| %>
      <div class="user-group">
        <%= link_to user_profile_path(user), class: "user-group-header-link" do %>
          <div class="user-group-header">
            <div class="user-header-grid">
              <div class="user-info">
                <span class="user-rank">#<%= index + 1 %></span>
                <span class="user-name"><%= user.display_name %></span>
              </div>
              <div class="user-line-placeholder"></div>
              <div class="user-spent"><%= format_currency(@user_stats[user.id][:total_spent]) %></div>
              <div class="user-winnings <%= @user_stats[user.id][:total_winnings] > 0 ? 'positive' : '' %>">
                <%= format_currency(@user_stats[user.id][:total_winnings]) %>
              </div>
            </div>
          </div>
        <% end %>
        
        <% bets.each do |bet| %>
          <div class="bet-item">
            <div class="bet-grid">
              <div class="bet-description"><%= bet.formatted_description %></div>
              <div class="bet-line"><%= bet.formatted_line %></div>
              <div class="bet-stake"><%= format_currency(bet.total_stake) %></div>
              <div class="bet-outcome <%= bet.result %>">
                <% if bet.result == 'pending' %>
                  <%= bet.result.humanize %>
                <% elsif bet.winnings > 0 %>
                  +<%= format_currency(bet.winnings) %>
                <% else %>
                  <%= format_currency(0) %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="empty-state">No bets placed for this week yet.</div>
  <% end %>
</div>

<script>
  document.getElementById('weekSelector').addEventListener('change', function() {
    window.location.href = '/week/' + this.value;
  });
</script>

<style>
