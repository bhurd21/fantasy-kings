    display: flex;
    align-items: center;
    gap: 12px;
  }

  .user-rank {
    font-size: 18px;
    font-weight: bold;
    color: #4d9640;
    min-width: 35px;
  }

  .user-name {
    font-size: 16px;
    font-weight: bold;
    color: white;
  }

  .user-line-placeholder {
