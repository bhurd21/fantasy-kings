  }

  .bet-item {
    background: #1a1a1a;
    border-radius: 8px;
    padding: 8px;
    margin-bottom: 8px;
  }

  .bet-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 0.8fr 1fr;
    gap: 16px;
    align-items: center;
  }

  .bet-description {
    font-size: 16px;
    color: white;
  }

  .bet-line {
    color: #4d9640;
    font-size: 14px;
    text-align: right;
  }

  .bet-stake {
    color: #888;
    font-size: 14px;
    text-align: right;
  }

  .bet-outcome {
    font-size: 14px;
    text-align: right;
    font-weight: bold;
  }

  .bet-outcome.pending {
    color: #888;
    text-transform: uppercase;
    font-size: 12px;
  }

  .bet-outcome.win {
    color: #4d9640;
  }

  .bet-outcome.loss {
    color: #d32f2f;
  }

  .bet-outcome.push {
    color: #ff9800;
  }

  .bet-result {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 12px;
    text-transform: uppercase;
  }

  .bet-result.pending {
    background: #333;
    color: #888;
  }

  .bet-result.win {
    background: #4d9640;
    color: white;
  }

  .bet-result.loss {
    background: #d32f2f;
    color: white;
  }

  .bet-result.push {
    background: #ff9800;
    color: white;
  }

  .empty-state {
    text-align: center;
    color: #888;
    padding: 40px 20px;
  }
</style>
